<Page x:Class="TestCompanion.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="using:TestCompanion.ViewModels"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,20,0,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="RequiredMarker" TargetType="TextBlock">
            <Setter Property="Text" Value=" *"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ============ MENU BAR ============ -->
        <MenuBar Grid.Row="0">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="Submit and Generate Report"
                                Click="Submit_Click"/>
                <MenuFlyoutItem Text="Open Report..."
                                Click="OpenReport_Click"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Clear Session"
                                Command="{Binding ClearCommand}"/>
            </MenuBarItem>
            <MenuBarItem Title="Options">
                <MenuFlyoutItem Text="Settings"
                                Click="OpenSettings_Click"/>
            </MenuBarItem>
            <MenuBarItem Title="Help">
                <MenuFlyoutItem Text="About"
                                Click="About_Click"/>
            </MenuBarItem>
        </MenuBar>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,16,0">
            <StackPanel Margin="32,16,32,32" MaxWidth="900"
                        HorizontalAlignment="Stretch">

                <!-- App Title -->
                <TextBlock Text="Test Companion"
                           FontSize="28" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Testing Session Form"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,0,0,8"/>

                <!-- ============ READ-ONLY BANNER ============ -->
                <Border x:Name="ReadOnlyBanner"
                        Background="{ThemeResource SystemAccentColorLight3}"
                        CornerRadius="6" Padding="12,8"
                        Margin="0,0,0,12"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="This report is opened in read-only mode."
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                        <Button Grid.Column="1"
                                Content="Enable Editing"
                                Command="{Binding EnableEditingCommand}"
                                Padding="12,6"/>
                    </Grid>
                </Border>


                <!-- ============ TITLE ============ -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Title" Style="{StaticResource FieldLabel}"/>
                    <TextBlock Style="{StaticResource RequiredMarker}"/>
                </StackPanel>
                <TextBox x:Name="TitleBox"
                         Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         PlaceholderText="Enter session title..."
                         HorizontalAlignment="Stretch"/>

                <!-- ============ AREAS ============ -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Areas (Coverage)" Style="{StaticResource FieldLabel}"/>
                    <TextBlock Style="{StaticResource RequiredMarker}"/>
                </StackPanel>
                <TextBlock Text="Select from coverage.ini hierarchy. Each selection may reveal more sub-categories."
                           FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Margin="0,0,0,4"/>
                <ItemsControl x:Name="AreaLevelsControl"
                              ItemsSource="{Binding AreaLevels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:AreaLevel">
                            <ComboBox MinWidth="180"
                                      ItemsSource="{Binding Options}"
                                      SelectedItem="{Binding SelectedNode, Mode=TwoWay}"
                                      PlaceholderText="Select..."
                                      DisplayMemberPath="Name"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- ============ START TIME ============ -->
                <TextBlock Text="Start" Style="{StaticResource FieldLabel}"/>
                <TextBox Text="{Binding StartTime, Mode=OneWay}"
                         IsReadOnly="True"
                         Opacity="0.7"/>



                <!-- ============ TESTER NAMES ============ -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tester Name(s)" Style="{StaticResource FieldLabel}"/>
                    <TextBlock Style="{StaticResource RequiredMarker}"/>
                </StackPanel>
                <TextBox Text="{Binding TesterNames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         PlaceholderText="Enter tester names (comma separated)..."
                         HorizontalAlignment="Stretch"/>

                <!-- ============ TASK BREAKDOWN ============ -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Task Breakdown (must sum to 100%)" Style="{StaticResource SectionHeader}"/>
                    <TextBlock Style="{StaticResource RequiredMarker}" Margin="0,20,0,8"/>
                </StackPanel>

                <Grid ColumnSpacing="16" RowSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Session Setup %"
                               Style="{StaticResource FieldLabel}"/>
                    <NumberBox Grid.Column="0" Grid.Row="1"
                               Value="{Binding SessionSetupPercent, Mode=TwoWay}"
                               Minimum="0" Maximum="100"
                               SpinButtonPlacementMode="Compact"
                               SmallChange="0.1" LargeChange="5"/>

                    <TextBlock Grid.Column="1" Grid.Row="0" Text="Test Design &amp; Execution %"
                               Style="{StaticResource FieldLabel}"/>
                    <NumberBox Grid.Column="1" Grid.Row="1"
                               Value="{Binding TestDesignPercent, Mode=TwoWay}"
                               Minimum="0" Maximum="100"
                               SpinButtonPlacementMode="Compact"
                               SmallChange="0.1" LargeChange="5"/>

                    <TextBlock Grid.Column="2" Grid.Row="0" Text="Bug Investigation &amp; Reporting %"
                               Style="{StaticResource FieldLabel}"/>
                    <NumberBox Grid.Column="2" Grid.Row="1"
                               Value="{Binding BugInvestigationPercent, Mode=TwoWay}"
                               Minimum="0" Maximum="100"
                               SpinButtonPlacementMode="Compact"
                               SmallChange="0.1" LargeChange="5"/>
                </Grid>

                <TextBlock x:Name="TaskBreakdownErrorText"
                           Text="{Binding TaskBreakdownError}"
                           Foreground="Red" FontSize="12"
                           Margin="0,4,0,0"/>

                <!-- ============ CHARTER / OPPORTUNITY ============ -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Charter vs Opportunity (must sum to 100%)" Style="{StaticResource SectionHeader}"/>
                    <TextBlock Style="{StaticResource RequiredMarker}" Margin="0,20,0,8"/>
                </StackPanel>
                <TextBlock Text="Adjusting one value automatically adjusts the other."
                           FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Margin="0,0,0,4"/>

                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Charter %"
                               Style="{StaticResource FieldLabel}"/>
                    <NumberBox Grid.Column="0" Grid.Row="1"
                               Value="{Binding CharterPercent, Mode=TwoWay}"
                               Minimum="0" Maximum="100"
                               SpinButtonPlacementMode="Compact"
                               SmallChange="1" LargeChange="10"/>

                    <TextBlock Grid.Column="1" Grid.Row="0" Text="Opportunity %"
                               Style="{StaticResource FieldLabel}"/>
                    <NumberBox Grid.Column="1" Grid.Row="1"
                               Value="{Binding OpportunityPercent, Mode=TwoWay}"
                               Minimum="0" Maximum="100"
                               SpinButtonPlacementMode="Compact"
                               SmallChange="1" LargeChange="10"/>
                </Grid>

                <!-- ============ FILES ============ -->
                <TextBlock Text="Data Files (optional)" Style="{StaticResource SectionHeader}"/>
                <Border x:Name="DropArea"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" BorderThickness="2"
                        CornerRadius="8" Padding="16"
                        MinHeight="80"
                        AllowDrop="True"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        DragOver="DropArea_DragOver"
                        Drop="DropArea_Drop">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Drag &amp; Drop files here"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="14"/>
                        <Button Content="Or Browse Files..."
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0"
                                Click="BrowseFiles_Click"/>
                    </StackPanel>
                </Border>
                <ItemsControl ItemsSource="{Binding AttachedFiles}" Margin="0,4,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding}"
                                           VerticalAlignment="Center" FontSize="12"
                                           TextTrimming="CharacterEllipsis"/>
                                <Button Grid.Column="1" Content="X" FontSize="10"
                                        Padding="4,2"
                                        Command="{Binding DataContext.RemoveFileCommand, ElementName=TitleBox}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- ============ TEST NOTES ============ -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Test Notes" Style="{StaticResource SectionHeader}"/>
                    <TextBlock Style="{StaticResource RequiredMarker}" Margin="0,20,0,8"/>
                </StackPanel>
                <TextBox Text="{Binding TestNotes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="150"
                         PlaceholderText="Enter test notes, observations, steps taken..."
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <!-- ============ BUGS ============ -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <TextBlock Text="Bugs" Style="{StaticResource SectionHeader}" Margin="0"/>
                    <Button Content="+ Add Bug" Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            Command="{Binding AddBugCommand}"/>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding Bugs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:BugEntryViewModel">
                            <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1"
                                    CornerRadius="8" Padding="16" Margin="0,8"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <StackPanel Spacing="8">
                                    <Grid>
                                        <TextBlock Text="Bug Entry"
                                                   FontWeight="SemiBold" FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <Button Content="Remove" HorizontalAlignment="Right"
                                                Command="{Binding DataContext.RemoveBugCommand, ElementName=TitleBox}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>

                                    <TextBlock Text="Title *" FontSize="12" FontWeight="Medium"/>
                                    <TextBox Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             PlaceholderText="Bug title..."/>

                                    <TextBlock Text="Description *" FontSize="12" FontWeight="Medium"/>
                                    <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True" TextWrapping="Wrap" MinHeight="120"
                                             PlaceholderText="Describe the bug..."
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                                    <TextBlock Text="Result *" FontSize="12" FontWeight="Medium"/>
                                    <TextBox Text="{Binding Result, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100"
                                             PlaceholderText="What happened?"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                                    <TextBlock Text="Expected Result *" FontSize="12" FontWeight="Medium"/>
                                    <TextBox Text="{Binding ExpectedResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100"
                                             PlaceholderText="What was expected?"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                                    <TextBlock Text="Related Files" FontSize="12" FontWeight="Medium"/>
                                    <TextBlock Text="Select from attached files above"
                                               FontSize="11" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <ItemsControl ItemsSource="{Binding SelectedRelatedFiles}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontSize="11"
                                                           Margin="8,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- ============ ISSUES ============ -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <TextBlock Text="Issues" Style="{StaticResource SectionHeader}" Margin="0"/>
                    <Button Content="+ Add Issue" Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            Command="{Binding AddIssueCommand}"/>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding Issues}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:IssueEntryViewModel">
                            <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1"
                                    CornerRadius="8" Padding="16" Margin="0,8"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <StackPanel Spacing="8">
                                    <Grid>
                                        <TextBlock Text="Issue Entry"
                                                   FontWeight="SemiBold" FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <Button Content="Remove" HorizontalAlignment="Right"
                                                Command="{Binding DataContext.RemoveIssueCommand, ElementName=TitleBox}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>

                                    <TextBlock Text="Title *" FontSize="12" FontWeight="Medium"/>
                                    <TextBox Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             PlaceholderText="Issue title..."/>

                                    <TextBlock Text="Description *" FontSize="12" FontWeight="Medium"/>
                                    <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True" TextWrapping="Wrap" MinHeight="150"
                                             PlaceholderText="Describe the issue in detail..."
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- ============ VALIDATION ============ -->
                <Border x:Name="ValidationBorder"
                        BorderBrush="Red" BorderThickness="1"
                        CornerRadius="4" Padding="12" Margin="0,16,0,0"
                        Visibility="Collapsed">
                    <TextBlock x:Name="ValidationText"
                               Foreground="Red" TextWrapping="Wrap" FontSize="12"/>
                </Border>

                <!-- Status message -->
                <TextBlock x:Name="StatusText"
                           Foreground="Green" FontSize="13"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>

                <!-- ============ BUTTONS ============ -->
                <StackPanel Orientation="Horizontal" Spacing="12"
                            HorizontalAlignment="Center" Margin="0,24,0,16">
                    <Button Content="Submit and Generate Report"
                            Click="Submit_Click"
                            FontSize="16" Padding="24,12"/>
                    <Button Content="Clear Session"
                            Command="{Binding ClearCommand}"
                            FontSize="14" Padding="16,12"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
