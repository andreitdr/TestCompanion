<Page x:Class="TestCompanion.SettingsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="24" Spacing="16" MaxWidth="500" HorizontalAlignment="Left">
        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>

        <TextBlock Text="Export Settings" FontSize="18" FontWeight="SemiBold"/>

        <TextBlock Text="Export Format" FontSize="14" FontWeight="Medium" Margin="0,4,0,2"/>
        <ComboBox x:Name="FormatComboBox"
                  MinWidth="250"
                  SelectionChanged="FormatComboBox_SelectionChanged"/>

        <TextBlock Text="Export Path" FontSize="14" FontWeight="Medium" Margin="0,4,0,2"/>
        <Grid ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="ExportPathBox"
                     Grid.Column="0"
                     PlaceholderText="Path to save reports..."
                     TextChanged="ExportPathBox_TextChanged"/>
            <Button Grid.Column="1" Content="Browse..."
                    Click="BrowseExportPath_Click"
                    VerticalAlignment="Bottom"/>
        </Grid>
    </StackPanel>
</Page>

